# =============================================================================
# FITNESS DASHBOARD CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git!

# -----------------------------------------------------------------------------
# OURA RING
# -----------------------------------------------------------------------------
# Get your API token from: https://cloud.ouraring.com/personal-access-tokens
OURA_API_TOKEN=your_oura_api_token_here

# For automated export (after API subscription ends)
OURA_EMAIL=your_oura_email@example.com
OURA_PASSWORD=your_oura_password_here

# -----------------------------------------------------------------------------
# STRAVA
# -----------------------------------------------------------------------------
# Create an app at: https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_strava_client_id
STRAVA_CLIENT_SECRET=your_strava_client_secret
STRAVA_REFRESH_TOKEN=your_strava_refresh_token

# -----------------------------------------------------------------------------
# GOOGLE SHEETS
# -----------------------------------------------------------------------------
# Your published Google Sheet ID (from the URL)
# Example: https://docs.google.com/spreadsheets/d/SHEET_ID_HERE/edit
GOOGLE_SHEET_ID=your_google_sheet_id_here

# Google Sheets API credentials file path
GOOGLE_CREDENTIALS_FILE=credentials.json

# -----------------------------------------------------------------------------
# DASHBOARD SETTINGS
# -----------------------------------------------------------------------------
# Your timezone (for accurate daily updates)
TIMEZONE=America/New_York

# Training targets
WEEKLY_LIFT_TARGET=2
WEEKLY_LIFT_BONUS=3
WEEKLY_RUN_TARGET=3
WEEKLY_RUN_MINUTES_TARGET=60

# Baseline values (will auto-calculate after 2 weeks)
HRV_BASELINE=60
RHR_BASELINE=55

# Cache settings
CACHE_DIR=.cache
MAX_CACHE_AGE_DAYS=3

# -----------------------------------------------------------------------------
# OPTIONAL: NOTIFICATIONS
# -----------------------------------------------------------------------------
# Email notifications for failures (optional)
NOTIFICATION_EMAIL=
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
